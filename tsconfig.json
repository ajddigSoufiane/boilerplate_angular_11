{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
	  "@environments/*": ["environments/*"],
      "@routes/*": ["app/routes/*"],
      "@shared/*": ["app/shared/*"],
      "@components":["app/shared/components/index"],
      "@models": ["app/shared/models/index"],
      "@services": ["app/shared/services/index"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    // "module": "es2015",
    "module": "es2020", // add this line",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}